{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
      "@campcadet/services/*": ["app/services/*"],
      "@campcadet/components/*": ["app/components/*"],
      "@campcadet/modules/*": ["app/modules/*"],
      "@campcadet/pipes/*": ["app/pipes/*"],
      "@campcadet/model/*": ["app/model/*"],
      "@environment/*": ["environments/*"]
    }
  }
}
